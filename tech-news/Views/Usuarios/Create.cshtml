@model Tech_news.Models.Usuarios

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar Usuário</h1>

<h4>Dados de Cadastro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" type="password" id="Senha" name="Senha"/>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#Senha').on('input', function () {
                var senhaInput = $(this).val(); // Obtém o valor atual do campo de senha
                var senhaMask = '';

                // Cria uma máscara com a mesma quantidade de '*' que caracteres na senha
                for (var i = 0; i < senhaInput.length; i++) {
                    senhaMask += '*';
                }

                $(this).val(senhaMask); // Define o valor do campo como a máscara
            });
        });
    </script>
}
